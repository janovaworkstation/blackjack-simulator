# Blackjack Strategy Simulator - Environment Variables Template
# Copy this file to .env.local and fill in your specific values

# Application Environment
# Options: development, staging, production
VITE_APP_ENV=development

# Application Settings
VITE_APP_NAME="Blackjack Strategy Simulator"
VITE_APP_VERSION="1.0.0"
VITE_APP_URL=http://localhost:5173

# API Configuration (for future backend integration)
VITE_API_BASE_URL=http://localhost:3000/api
VITE_API_TIMEOUT=30000

# Analytics and Monitoring
VITE_GOOGLE_ANALYTICS_ID=
VITE_BUGSNAG_API_KEY=

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_DEBUG_MODE=true

# PWA Configuration
VITE_PWA_CACHE_NAME=blackjack-simulator
VITE_PWA_CACHE_VERSION=v1

# Development Tools
VITE_ENABLE_STORYBOOK=true
VITE_ENABLE_DEV_TOOLS=true

# Security
VITE_CONTENT_SECURITY_POLICY=

# Third-party Services
VITE_PLAUSIBLE_DOMAIN=
VITE_MIXPANEL_TOKEN=

# Build Configuration
VITE_BUILD_TARGET=es2015
VITE_BUNDLE_ANALYZER=false

# Note: Only VITE_ prefixed variables are exposed to the client
# Server-side secrets should be added to GitHub Secrets for CI/CD